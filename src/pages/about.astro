---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const identity = {
	firstName: "Cristobal",
	country: "Chile",
	occupation: "Fullstack Developer",
	hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = [
	"HTML",
	"CSS",
	"JavaScript",
	"Angular",
	"Astro",
	"Writing Docs",
];

const happy = true;
const finished = true;
const goal = 3;

//CSS Properties
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";

const pageTitle = 'About page'
---

<BaseLayout pageTitle={pageTitle}>

		<h1>Here are a few facts about me:</h1>
		<ul>
			<li>My name is {identity.firstName}.</li>
			<li>
				I live in {identity.country} and I work as a {
					identity.occupation
				}.
			</li>
			{
				identity.hobbies.length >= 2 && (
					<li>
						Two of my hobbies are: {identity.hobbies[0]} and{" "}
						{identity.hobbies[1]}
					</li>
				)
			}
		</ul>
		<p>My skills are:</p>
		<ul>
			<!-- {skills.map((skill) => <li>{skill}</li>)} -->
			{skills.map((skill) => <li class="skill">{skill}</li>)}
		</ul>

		<hr />
		<br />
		{happy && <p>I am happy to be learning Astro!</p>}

		{finished && <p>I finished this tutorial!</p>}

		{
			goal === 3 ? (
				<p>My goal is to finish in 3 days.</p>
			) : (
				<p>My goal is not 3 days.</p>
			)
		}


	<style define:vars={{ skillColor, fontWeight, textCase }}>
		h1 {
			color: purple;
			font-size: 4rem;
		}
		.skill {
			color: var(--skillColor);
			font-weight: var(--fontWeight);
			text-transform: var(--textCase);
		}
	</style>
</BaseLayout>
